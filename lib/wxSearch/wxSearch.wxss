.wxSearch {
    position: fixed;
    top: 43px;
    left: 0;
    width: 100%;
    height: 100%;
    border-top: 1px #eee solid;
    background-color: rgba(0, 0, 0, 0.2);
}

.wxSearchInner {
    background-color: #fff;
    margin: 1% 0;
    /* z-index: 999; */
    /* position: relative; */
}

.wxSearch-section {
    background-color: #fff;
    padding: 5px 10px;
    border: 1px #eee solid;
}

.wxSearch-pancel {
    display: flex;
    flex-direction: row;
}

.wxSearch-input {
    flex: 8;
    background-color: white;
    padding: 5px 10px;
    font-size: small;
}

.wxSearch-button {
    flex: 1;
    border: none !important;
    color: white !important;
}

.wxSearchTitle {
    display: block;
    padding: 10px 5px 5px 10px;
    font-size: 15px;
    text-align: center;
    font-weight: bold;
}

.wxSearchMindKeyItem {
    padding: 10px 5px;
    border-bottom: 1px solid #eee;
    display: flex;
    font-size: 14px;
    color: cornflowerblue !important;
    background-color: silver;
}

.wxSearchKeyList {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding-left: 5%;
}

.wxSearchKeyItem {
    flex: 0 0 20%;
    font-size: 14px;
    text-align: center;
    margin: 7px;
    padding: 5px 10px;
    border-radius: 20px;
    background-color: rgb(241, 241, 241);
    color: grey;
    border: none;
    padding-left: 5%;
}

.wxSearchHistoryItem {
    padding: 10px 5px;
    border-bottom: 1px solid #eee;
    display: flex;
    color: grey;
}

.wxSearchHistoryItemText {
    flex: 8;
    font-size: 14px;
}

.wxSearchHistoryItemDel {
    flex: 1;
    font-size: 12px;
    text-align: center;
    padding: 3px 0 3px 5px;
    border: none;
}

.wxSearchHistoryEmpty {
    text-align: center;
    height: 50px;
    line-height: 50px;
    font-size: 12px;
}

.wxSearchDeleteAllBtn {
    height: 50px;
    line-height: 50px;
    text-align: center;
    font-size: 12px;
    color: grey;
}
