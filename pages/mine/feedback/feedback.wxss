/* pages/mine/feedback/feedback.wxss */

page {
    background-color: #f4f4f4;
}

textarea {
    width: 94%;
    height: 500rpx;
    margin: 3%;
    box-sizing: border-box;
    padding: 3%;
    font-size: 30rpx;
    box-shadow: 2rpx 2rpx 2rpx #888;
    border-radius: 0rpx;
    border: 1px solid lightgray;
    background-color: white;
}

.submitBtn {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 8%;
    border-radius: 0;
    background-color: orange;
    color: white;
    font-size: 35;
    font-weight: 600;
}

.submitBtn-hover {
    background-color: rgb(153, 105, 0);
}

.submitBtn::after {
    border-radius: 0;
}
