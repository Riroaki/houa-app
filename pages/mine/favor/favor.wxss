/* 求职卡片 */

.job-card {
    width: 94%;
    margin: 3%;
    box-shadow: 2rpx 2rpx 2rpx #888;
    border-radius: 10rpx;
    display: inline-flex;
    flex-wrap: nowrap;
    flex-direction: row;
    border: 1px solid lightgray;
    background-color: white;
}

.thumb {
    max-width: 120rpx;
    max-height: 120rpx;
    margin: 3%;
    left: 0;
}

.card-details {
    width: 100%;
    height: 100%;
    margin-right: 5%;
}

.firstRow, .secondRow {
    margin-top: 5%;
    width: 100%;
    height: 45%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.urgentTag, .topTag {
    max-width: 70rpx;
    max-height: 35rpx;
    margin: 4rpx 2px 0 2px;
}

.card-title {
    font-size: 35rpx;
    font-weight: 900;
    color: black;
}

.card-viewed {
    font-size: 25rpx;
    font-weight: 600;
    color: #B2B2B2;
    align-self: flex-end;
}

.card-place, .card-salary {
    font-size: 25rpx;
    font-weight: 400;
    color: grey;
}

.card-workload {
    font-size: 25rpx;
    font-weight: 600;
    color: gray;
}